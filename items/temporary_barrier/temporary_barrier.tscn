void fragment() {
	vec3 world_coords = (CAMERA_MATRIX * vec4(VERTEX, 1.0)).xyz;
	
	float vis = 1.0;
	
	if (mod(world_coords.y + world_coords.x + world_coords.z + TIME * 0.4, 0.6) > 0.03) {
		vis *= 0.2;
	}
	
	ALBEDO = color.xyz * vis;
	ALPHA = vis;
}
